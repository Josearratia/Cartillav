<% include partials/_header %>
<% if(Campo) { %>
</div>
<div class="alert alert-danger" role="alert">
    Campo Vacio.
</div>
<% } %>
<% if(existente) { %>
  <div class="alert alert-danger" role="alert">
          El PACIENTE NO ESTA REGISTRADO
  </div>
  <% } %>
 <% if(nuevo) { %>
 <div class="alert alert-success" role="alert">
         VACUNA GUARDADA CON ÉXITO!
 </div>
 <% } %>

<div class="card" style="width: 700px; margin-left: 24%; margin-top: 60px;">
        <div class="card-header">
           Editar Vacuna
         </div>
         <div class="card-body">
             <form action="/edit/<%= editVacuna._id%>" method="post">
                 <div class="form-group">
                   <label>Vacuna</label>
                   <input type="text" class="form-control" name="vacuna" placeholder="Vacuna" value="<%= editVacuna.vacuna %>">
                   <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                 </div>
                 <div class="form-group">
                   <label>Enfermedad que previene</label>
                   <input type="text" name="enfermedad" class="form-control"  placeholder="Enfermedad que previene" value="<%= editVacuna.Enfermedadprevenida %>">
                </div>
                <div class="form-group">
                    <label>Dosis</label>
                    <input type="text" name="dosis" class="form-control"  placeholder="Dosis" value="<%= editVacuna.Dosis %>">
                </div>
                <div class="form-group">
                    <label>Frecuencia</label>
                    <input type="text" name="frecuencia" class="form-control"  placeholder="Frecuencia" value="<%= editVacuna.frecuencia %>">
                </div>
                <div class="form-group">
                    <label>Seleccione Tipo De Edad Del Paciente</label>
                    <select id="inputState" class="form-control" name="sexo">
                            <option <%= editVacuna.anos ? 'selected' : ''  %>  value="Años" >Años</option>
                            <option <%= editVacuna.meses ? 'selected' : '' %> value="Meses">Meses</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Edad</label>
                    <input type="number" name="edad" class="form-control"  placeholder="Edad" value="<%= editVacuna.edad %>">
                </div>
               <div class="form-group">
                       <label>Fecha De Vacunacion</label>
                       <div class="form-group">
                            <input class="form-control" id="date" name="fechavacuna" value="<%= editVacuna.FechaVacunacion %>" placeholder="YYYY/MM/DD" type="text"/>
                        </div>
                   </div>
               <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
           </form>
       </div>
   </div>
       <script>
            $(document).ready(function(){
              var date_input=$('input[name="fechavacuna"]'); //our date input has the name "date"
              var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
              var options={
                format: 'yyyy/mm/dd',
                container: container,
                todayHighlight: true,
                autoclose: true,
              };
              date_input.datepicker(options);
            })
        </script>
<% include partials/_footer %>