<div class="card" style="width: 700px; margin-left: 24%; margin-top: 60px;">
        <div class="card-header">
           Vacuna
         </div>
         <div class="card-body">
             <form action="/session/nvacuna" method="post">
                <div class="form-group">
                    <label>Curp</label>
                    <input type="text" class="form-control" name="curp" placeholder="Curp">
                  </div>
                 <div class="form-group">
                   <label>Vacuna</label>
                   <select id="vacunas" class="form-control" name="vacuna">
                      <option selected value="sida">sida</option>
                      <option value="sida2">sida2</option>
                   </select>
                   <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                 </div>
                 
                 <!--<div class="form-group">
                   <label>Enfermedad que previene</label>
                   <input type="text" name="enfermedad" class="form-control"  placeholder="Enfermedad que previene">
                </div>-->

                <div class="form-group">
                    <label>Dosis</label>
                    <select id="Dosis" class="form-control" name="dosis">
                      <option value="dosis1">dosis1</option>
                      <option value="dosis2">dosis2</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Frecuencia</label>
                    <select name="frecuencia" class="form-control" id="Frecuencia">
                        <option value="frecuencia1">frecuencia1</option>
                        <option value="frecuencia2">frecuencia2</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Seleccione Tipo De Edad Del Paciente</label>
                    <select id="inputState" class="form-control" name="sexo">
                            <option selected value="Años" >Años</option>
                            <option value="Meses">Meses</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Edad</label>
                    <input type="number" name="edad" class="form-control"  placeholder="Edad">
                </div>

               <div class="form-group">
                       <label>Fecha De Vacunacion</label>
                       <div class="form-group">
                            <input class="form-control" id="date" name="fechavacuna" placeholder="YYYY/MM/DD" type="text"/>
                        </div>
                   </div>
               <button type="submit" class="btn btn-primary btn-block">Guardar</button>
           </form>
       </div>
   </div>
       <script>
            $(document).ready(function(){
              var date_input=$('input[name="fechavacuna"]'); //our date input has the name "date"
              var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
              var options={
                format: 'yyyy/mm/dd',
                container: container,
                todayHighlight: true,
                autoclose: true,
              };
              date_input.datepicker(options);
            })
        </script>
