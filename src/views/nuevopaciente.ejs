<% include partials/_header %>
<div class="card" style="width: 700px; margin-left: 24%; margin-top: 60px;">
        <div class="card-header">
           Nuevo Paciente
         </div>
         <div class="card-body">
             <form action="/session/nuevopaciente" method="post">
                 <div class="form-group">
                   <label>Curp Del Paciente</label>
                   <input type="text" class="form-control" name="curp" placeholder="Curp">
                   <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                 </div>
                 <div class="form-group">
                   <label>Nombre Del Paciente</label>
                   <input type="text" name="nombre" class="form-control"  placeholder="Nombre Completo">
               </div>
               <div class="form-group">
                       <label>Fecha De Nacimiento Del Paciente</label>
                       <div class="form-group">
                            <input class="form-control" id="date" name="fechanacimiento" placeholder="YYYY/MM/DD" type="text"/>
                        </div>
                   </div>
               <div class="form-group">
                   <label>Seleccione El Sexo Del Paciente</label>
                   <select id="inputState" class="form-control" name="sexo">
                           <option selected value="Hombre" >Hombre</option>
                           <option value="Mujer">Mujer</option>
                   </select>
               </div>
               <button type="submit" class="btn btn-primary btn-block">Guardar</button>
           </form>
           <% if(existente) { %>
           </div>
           <div class="alert alert-danger" role="alert">
               EL USUARIO YA EXISTE! INTENTE DE NUEVO
           </div>
           <% } %>
           <% if(Campo) { %>
           </div>
           <div class="alert alert-danger" role="alert">
               Campo Vacio.
           </div>
           <% } %>
           <% if(nuevo) { %>
           <div class="alert alert-success" role="alert">
                   USUARIO GUARDADO CON Ã‰XITO!
           </div>
           <% } %>
       </div>
   </div>
       <script>
            $(document).ready(function(){
              var date_input=$('input[name="fechanacimiento"]'); //our date input has the name "date"
              var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
              var options={
                format: 'yyyy/mm/dd',
                container: container,
                todayHighlight: true,
                autoclose: true,
              };
              date_input.datepicker(options);
            })
        </script>
