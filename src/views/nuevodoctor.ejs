<% include partials/_header %>
	<div class="card" style="width: 700px; margin-left: 24%; margin-top: 60px;">
 		<div class="card-header">
    		Nuevo Usuario
  		</div>
  		<div class="card-body">
  			<form action="/session/guardarnuevousuario" method="post">
		  		<div class="form-group">
		    		<label for="exampleInputEmail1">Nombre De Usuario</label>
		    		<input type="text" class="form-control" name="usuario" id="name" aria-describedby="emailHelp" placeholder="Ingrese nombre de usuario">
		    		<!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
		  		</div>
  				<div class="form-group">
		    		<label for="exampleInputPassword1">Contraseña</label>
		    		<input type="password" name="password" class="form-control" id="pass" placeholder="Contraseña">
		  		</div>
  				<button type="submit" class="btn btn-primary btn-block">Guardar</button>
            </form>
            <% if(existente) { %>
            </div>
